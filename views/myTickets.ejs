<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Ticket Train</title>
</head>
<body>

    <!-- NAVBAR HEADER Boostrap -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #e3f2fd;">

        <a class="navbar-brand" href="/index">
            <img src="/images/train.png" width="30" height="30" alt="">
        </a>        
        <a class="navbar-brand" href="/index">Ticket Train</a>

        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
            </ul>
            <span class="navbar-text">
                <a class="nav-link" href="/" style='color:#c82333; font-weight: bold;;'> Déconnexion</a>
            </span>
            <span class="navbar-text">
                    <a class="nav-link" href="/myLastTrips">Mes voyages</a>
            </span>
        </div>

    </nav>   
              
              
    <div class="home">

        <!-- Test title -->
        <h3 class="homeTitle">My tickets : </h3>

        <!-- Table resultField -->

        
        <div class="tableDiv">
            <table class="table table-light ">
            <thead>
                <tr>
                <th scope="col">N°</th>
                <th scope="col">Voyages</th>
                <th scope="col">Date</th>
                <th scope="col">Heure de départ</th>
                <th scope="col">Prix</th>
                </tr>
            </thead>
            <tbody>

                <% 
                var totalBasket = 0
                var Number = 0
                 %>

                <% for(var i = 0; i<myTickets.length; i++){
                    
                    totalBasket = totalBasket + myTickets[i].ticketPrice
                    Number++

                %>
                <tr>
                <th scope="row"> <%= Number %> </th>
                <td> <%= myTickets[i].ticketDeparture %> / <%=myTickets[i].ticketArrival %></td>
                <td> <%= myTickets[i].ticketDate %> </td>
                <td> <%= myTickets[i].ticketDepartureTime %> h</td>
                <td> <%= myTickets[i].ticketPrice %> €</td>
                </tr>

                <% } %>

                <tr  class="table-danger">
                
                <th colspan="4">Total</th>
                <td> <%= totalBasket %> €</td>
                </tr>
            </tbody>
            </table>
        </div>

        <div style="margin-left:80%;">
            <a href="/confirmReservation" class="btn btn-danger">Confirmer</a>
        </div>
        
    


        
        <div class="footer">
        <p>© 2020 La Capsule</p>
        </div>
    </div> 
    


</body>
